# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python2-rtmapi
_pyname=RtmAPI
pkgver=0.5.3
pkgrel=1
pkgdesc='API package for rememberthemilk.com'
arch=('any')
url='http://pypi.python.org/pypi/RtmAPI/'
license=('MIT')
depends=('python2' 'python2-httplib2')
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/$(echo ${_pyname} | cut -c1)/${_pyname}/${_pyname}-${pkgver}.zip"
        "LICENSE")
md5sums=('c23c9ddf2b831ce462e4825bfb9412a2' '7d6fd7c8e022bae9010af272c31eb45f')

package() {
  cd "${srcdir}/${_pyname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 ../LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

